             if (this.foodTimer >= 10) {
                 float f = Math.min(this.foodSaturationLevel, 6.0F);
-                player.heal(f / 6.0F, RegainReason.SATIATED);
+                player.heal(f / 6.0F, RegainReason.SATIATED, true); // Paper - This is fast regen
